<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingIndicatorView">
        <attr name="indicator">
            <flag name="BallSpinFadeLoader" value="22"/>
        </attr>
        <attr name="indicator_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="TabIndicator">
        <attr name="horizontalSpace" format="reference|integer"></attr>
        <attr name="fullColor" format="reference|color"></attr>
        <attr name="radius" format="reference|integer"></attr>
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="leftViewId" format="reference"/>
        <attr name="rightViewId" format="reference"/>
        <attr name="contentViewId" format="reference"/>
    </declare-styleable>

</resources>